<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Arroword!"
        android:textColor="#FF018786"
        android:textSize="80dp"/>


    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game!"
        android:layout_marginTop="300dp"
        android:backgroundTint="#FF018786"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="140dp"
        android:text="" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_down"
        android:layout_marginTop="360dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="100dp"
        android:text="-Start answer in the square below."/>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_downleft"
        android:layout_marginTop="410dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="100dp"
        android:text="-Start answer one square below to the left."/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="460dp"
        android:src="@drawable/arrow_downrightcol" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="460dp"
        android:text="-Start answer one square below to the right, write in col'." />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_right"
        android:layout_marginTop="510dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="100dp"
        android:text="-Start answer one square to the right."/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_upleft"
        android:layout_marginTop="560dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="100dp"
        android:text="-Start answer one square up and to the left."/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_upright"
        android:layout_marginTop="610dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="100dp"
        android:text="-Start answer one square up and to the right."/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_uprightrow"
        android:layout_marginTop="660dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="100dp"
        android:text="-Start answer one square up and to the right, write in a row."/>






</RelativeLayout>
